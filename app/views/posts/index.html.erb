
<section id="about" class="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">

        <% @posts.each do |post| %>
            <div class="post_wrapper">
              <h2 class=title"><%= link_to post.title, post %></h2>

              <p class="date"><%= post.created_at.strftime("%A, %d %b %Y %l:%M %p") %></p>
            </div>
        <% end %>

      </div>
    </div>
  </div>
</section>

